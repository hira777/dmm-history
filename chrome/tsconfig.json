{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015", // ESM は webpack が変形する
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "moduleResolution": "node", // node_modules から モジュールをインポートするために必要
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // 例: src/utils/history -> @/utils/history
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["src/vue/*"]
}
